<div class="common-box">
   <form action="/portal/setting/editPost2" method="post" accept-charset="utf-8">
   <div class="htitle"><span>Type of account: Personal</span> <a class="common-but" href="/setting/contact">Cancel</a><a class="common-but" href="#">Save</a></div>
   <div class="main-box">
     <div class="d-left">
		<ul class="s-nav">
		  <li><a href="/portal/setting/index">Account Information</a></li>
		  <li class="hover"><a href="/portal/setting/contact">Contact information</a></li>
		</ul>
	 </div>
	 
	 <div class="d-right">

	     <div class="main-form">
		    <dl><dt>Mobile phone*</dt><dd><input class="txt" type="text" name="mobile" value="{$userinfo['mobile']}" /></dd></dl>
		    <dl><dt>First Name*</dt><dd><input class="txt" type="text" name="fname" value="{$userinfo['fname']}" /></dd></dl>
		    <dl><dt>Last Name*</dt><dd><input class="txt" type="text" name="lname" value="{$userinfo['lname']}" /></dd></dl>
		    <dl><dt>Street*</dt><dd><input class="txt" type="text" name="street" value="{$userinfo['street']}" /></dd></dl>
		    <dl><dt>City*</dt><dd><input class="txt" type="text" name="city" value="{$userinfo['city']}" /></dd></dl>
		    <dl><dt>Post code*</dt><dd><input class="txt" type="text" name="postCode" value="{$userinfo['postCode']}" /></dd></dl>
		    <dl><dt>Country</dt><dd><div class="select"><i></i><select name="country"><option>China</option></select></div></dd></dl>
		    <dl><dt>Time Zone</dt><dd><div class="select"><i></i><select name="timezone"><option>Beijing , China (GMT+0800)</option></select></div></dd></dl>
		    <dl><dt>Telephone</dt><dd><input class="txt" type="text" name="telephone" value="{$userinfo['telephone']}" /></dd></dl>
		    <dl><dt>Fax</dt><dd><input class="txt" type="text" name="fax" value="{$userinfo['fax']}" /></dd></dl>
		    <dl><dt>Email*</dt><dd><input class="txt" type="text" name="email" value="{$userinfo['email']}" /></dd></dl>
		    <dl><dt>MSN Messenger</dt><dd><input class="txt" type="text" name="msn" value="{$userinfo['msn']}" /></dd></dl>
		    <dl><dt>Skype</dt><dd><input class="txt" type="text" name="skype" value="{$userinfo['skype']}" /></dd></dl>
			
			
			
		    <div class="but-box">
		      <a class="common-but" href="/portal/setting/contact">Cancel</a> <input class="common-but" type="submit" value="Save" />
		    </div>

		 </div> 
